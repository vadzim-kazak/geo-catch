<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:padding="20dip">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="horizontal"
                  android:background="@drawable/white_bordered_background"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:padding="10dip"
                  android:layout_marginBottom="30dip" >

        <ImageView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/imageThumbnail"
                   android:background="@android:color/darker_gray"
                   android:src="@android:drawable/ic_menu_compass"
                   android:padding="1dip"
                   android:layout_gravity="center_vertical|left"/>

        <com.jrew.geocatch.mobile.view.PrePopulatedEditText android:layout_width="fill_parent"
                                                            android:layout_height="fill_parent"
                                                            android:text="Add description here..."
                                                            android:background="@null"
                                                            android:id="@+id/uploadImageDescription"
                                                            android:paddingLeft="10dip"
                                                            android:gravity="top"/>

    </LinearLayout>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="DETAILS"
              android:textStyle="bold"
              android:textSize="18dip"
              android:textColor="@android:color/darker_gray"
              android:layout_gravity="left|center_vertical"
              android:layout_marginBottom="5dip"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="horizontal"
                  android:background="@drawable/white_bordered_background"
                  android:layout_width="match_parent"
                  android:layout_height="40dip"
                  android:layout_marginBottom="10dip"
                  android:gravity="center_vertical|left">

        <ImageView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/fish"
                   android:paddingLeft="5dip"
                   android:layout_gravity="center_vertical|left"/>

        <com.jrew.geocatch.mobile.view.DomainPropertyView android:layout_width="match_parent"
                                                          android:layout_height="wrap_content"
                                                          android:background="@null"
                                                          android:text="Fish type..."
                                                          android:paddingLeft="5dip"
                                                          android:id="@+id/fishTypeView"
                                                          android:layout_gravity="center"/>

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="horizontal"
                  android:background="@drawable/white_bordered_background"
                  android:layout_width="match_parent"
                  android:layout_height="40dip"
                  android:layout_marginBottom="10dip"
                  android:gravity="center_vertical|left">

        <ImageView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/fish"
                   android:paddingLeft="5dip"
                   android:layout_gravity="center_vertical|left"/>

        <com.jrew.geocatch.mobile.view.DomainPropertyView android:layout_width="match_parent"
                                                          android:layout_height="wrap_content"
                                                          android:background="@null"
                                                          android:text="Fishing tool..."
                                                          android:paddingLeft="5dip"
                                                          android:id="@+id/fishingToolView"
                                                          android:layout_gravity="center"/>

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="horizontal"
                  android:background="@drawable/white_bordered_background"
                  android:layout_width="match_parent"
                  android:layout_height="40dip"
                  android:layout_marginBottom="30dip"
                  android:gravity="center_vertical|left">

        <ImageView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/fish"
                   android:paddingLeft="5dip"
                   android:layout_gravity="center_vertical|left"/>

        <com.jrew.geocatch.mobile.view.DomainPropertyView android:layout_width="match_parent"
                                                          android:layout_height="wrap_content"
                                                          android:background="@null"
                                                          android:layout_gravity="center"
                                                          android:paddingLeft="5dip"
                                                          android:text="Bait..."
                                                          android:id="@+id/fishingBaitView"/>

    </LinearLayout>


    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="SHARE"
              android:textStyle="bold"
              android:textSize="18dip"
              android:textColor="@android:color/darker_gray"
              android:layout_gravity="left|center_vertical"
              android:layout_marginBottom="5dip"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="vertical"
                  android:background="@drawable/white_bordered_background"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginBottom="10dip">


        <RadioGroup android:id="@+id/privacyLevel"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                <RadioButton android:id="@+id/sharePublic"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:text="Public"
                             android:textSize="18dip"
                             android:checked="true"/>

                <RadioButton android:id="@+id/sharePrivate"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:layout_marginLeft="80dip"
                             android:text="Private"
                             android:textSize="18dip"/>

        </RadioGroup>

    </LinearLayout>

</LinearLayout>