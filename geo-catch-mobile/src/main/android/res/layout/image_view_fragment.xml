<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:orientation="vertical"
              xmlns:android="http://schemas.android.com/apk/res/android">


    <ImageView android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/imageView"
               android:src="@android:drawable/ic_menu_compass"
               android:layout_gravity="center_horizontal|center_vertical"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/imageDescription"
              android:layout_gravity="left|center_vertical"/>

    <TextView android:id="@+id/imageDate"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Date: "
              android:layout_gravity="left|center_vertical"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:id="@+id/fishTypeRow"
                  android:visibility="invisible"
                  android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Fish:"
                  android:layout_gravity="left|center_vertical"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/fishTypeDescription"
                  android:layout_gravity="left|center_vertical"/>

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:id="@+id/fishingToolRow"
                  android:visibility="invisible"
                  android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Fishing tool:"
                  android:layout_gravity="left|center_vertical"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/fishingToolDescription"
                  android:layout_gravity="left|center_vertical"/>

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:id="@+id/fishingBaitRow"
                  android:visibility="invisible"
                  android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Fishing bait:"
                  android:layout_gravity="left|center_vertical"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/fishingBaitDescription"
                  android:layout_gravity="left|center_vertical"/>

    </LinearLayout>


    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Like"
            android:id="@+id/button"
            android:layout_gravity="left|center_vertical"/>

</LinearLayout>